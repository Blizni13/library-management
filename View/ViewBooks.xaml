<Window x:Class="library_management.View.ViewBooks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:library_management.View"
        mc:Ignorable="d"
        Title="ViewBooks" Height="450" Width="800"
        Loaded="Window_Loaded" ScrollViewer.VerticalScrollBarVisibility="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Content="View Books"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               FontSize="18"
               FontWeight="Bold"
               Background="LightYellow"/>

        <Rectangle Grid.Row="1" Fill="AliceBlue"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label VerticalAlignment="Center">Search by book name</Label>
            <TextBox Name="BookTextBox" VerticalAlignment="Center" Width="150" Margin="10 0 10 0" TextChanged="TextBox_TextChanged"/>
            <Button VerticalAlignment="Center" Width="75" Click="Button_Click">Refresh</Button>
        </StackPanel>
        <DataGrid Name="BooksDataGrid" Grid.Row="2" SelectionChanged="BooksDataGrid_SelectionChanged" Margin="0,0,0,-201">
        </DataGrid>
    </Grid>
</Window>
