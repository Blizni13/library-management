<Window x:Class="library_management.View.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/" 
        xmlns:local="clr-namespace:library_management.View" 
        xmlns:viewModel="clr-namespace:library_management.ViewModel"
        mc:Ignorable="d"
        Title="Dashboard" 
        Height="450" 
        Width="800" 
        WindowState="Maximized"
        WindowStyle="None">
    <Window.DataContext>
        <viewModel:DashboardViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/library_img.jpg"/>
        </Grid.Background>
        <Menu Height="50" VerticalAlignment="Top" HorizontalAlignment="Stretch" Background="LightGoldenrodYellow">
            <!-- MenuItem structure -->
            <MenuItem Header="Books" FontSize="18" FontWeight="Bold" Height="50" Margin="10,0,10,0">
                <MenuItem.Icon>
                    <fa:ImageAwesome Icon="Book" />
                </MenuItem.Icon>
                <MenuItem Header="Add New Book" FontWeight="Normal" FontSize="15" Command="{Binding OpenAddBookCommand}">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="PlusCircle"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="View Books" FontWeight="Normal" FontSize="15">
                    <MenuItem.Icon>
                        <fa:ImageAwesome Icon="List"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Readers" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="50" Margin="10,0,10,0">
                <MenuItem.Icon>
                    <fa:ImageAwesome Icon="User"/>
                </MenuItem.Icon>
                <MenuItem Header="Add Reader" FontSize="15" FontWeight="Normal"/>
                <MenuItem Header="View Reader Info" FontSize="15" FontWeight="Normal"/>
            </MenuItem>
            <MenuItem Header="Issue Book" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="50" Margin="10,0,10,0">
                <MenuItem.Icon>
                    <fa:ImageAwesome Icon="SignIn"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Return Book" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="50" Margin="10,0,10,0">
                <MenuItem.Icon>
                    <fa:ImageAwesome Icon="ArrowCircleLeft"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Books Details" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="50" Margin="10,0,10,0">
                <MenuItem.Icon>
                    <fa:ImageAwesome Icon="Book"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="Exit" Command="{Binding ExitCommand}" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Height="50" Margin="10,0,10,0">
                <MenuItem.Icon >
                    <fa:ImageAwesome Icon="WindowClose"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
